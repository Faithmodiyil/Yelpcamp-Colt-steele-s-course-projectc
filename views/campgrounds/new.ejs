<%- include ("../partials/header") %>
<div class="container">
  <div class="form-group">
      <h1 style="text-align:center;padding-bottom:30px ;">Create a New campground</h1>
    <div style="width: 30%;margin: 0 auto;">
      <form action="/campground" method="Post">
        <div class="form-group">
      <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="price" min="0
          " step="10">
            </div>
        <div class="form-group">
      <input class="form-control" type="text" name="image" placeholder="image">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="description">
            </div>
      <button  class="btn btn-lg btn-default btn-block btn-primary">Sumbit</button>
      </form>
      <a style="text-align:end;" href="/campgrounds">Go Back</a>
     </div> 
</div>
</div> 

