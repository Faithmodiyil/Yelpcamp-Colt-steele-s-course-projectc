<%- include ("../partials/header") %>

<h4></h4>
<div class="container p-4">
<header class="jumbotron">
<div class="container">
<h1> <i class="fas fa-campground"></i> Welcome to the Yelpcamp Page</h1>

<p>View our hand-picked campgrounds from all over the world</p
 
  <p>
    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
    </p>

</div>
</header>

<div class="row" style="display:flex;flex-wrap: wrap;">
  <% campgrounds.forEach(function(campground){%> 
    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-12">
      <div class="img-thumbnail m-2">
   
      <img style="margin-right:20px; padding-left: 0rem;" src="<%= campground.image %>" class="img-fluid" alt="Responsive image">
     <div class="caption">
     <h4 style="padding-left: 0rem;"><%= campground.name %> </h4>
     </div>
     <p>
       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary ">More Info</a>
     </p>
  </div>    
  </div>

<% }) %>

</div>
</div>

<%- include ("../partials/footer") %>
